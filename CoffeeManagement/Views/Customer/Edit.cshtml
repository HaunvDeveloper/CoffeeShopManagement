@model Customer
@{
    ViewData["Title"] = "Sửa khách hàng";
}
@section Links {
    <link rel="stylesheet" href="~/assets/css/course.css">
    <link rel="stylesheet" href="~/assets/css/checkbox.css">
    <style>
        .form-group {
            display: flex;
            flex-direction: column;
        }
    </style>
}


<div class="container">
    <div class="table-container m-4">
        <h4 class="text-center mb-4 mt-2 text-danger" style="font-size:30px;font-weight:bold;">SỬA KHÁCH HÀNG</h4>
        <form asp-action="Edit" asp-controller="Customer" method="post" id="form-create" class="container">
            <hr />
            <div class="row info-detail">
                <div class="col-lg-6">
                    <div class="form-group mb-3">
                        <span class="text-no-wrap text-danger">Số khách hàng</span>
                        <input class="form-control" required disabled value="@Model.CustomerNo" />
                        <input asp-for="CustomerNo" type="hidden" />
                    </div>

                    <div class="form-group mb-3">
                        <span class="text-no-wrap text-danger">Tên đầy đủ</span>
                        <input asp-for="FirstName" class="form-control" required placeholder="Nhập tên đầy đủ..." />
                    </div>
                    <div class="form-group mb-3">
                        <span class="text-no-wrap">Email</span>
                        <input asp-for="Email" class="form-control" placeholder="Nhập email..." />
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group mb-3">
                        <span class="text-no-wrap text-danger">Tên viết tắt</span>
                        <input asp-for="LastName" class="form-control" required placeholder="Nhập tên viết tắt..." />
                    </div>
                    <div class="form-group mb-3">
                        <span class="text-no-wrap text-danger">Số điện thoại</span>
                        <input asp-for="PhoneNo" class="form-control" required placeholder="Nhập số điện thoại..." />
                    </div>

                    <div class="form-group mb-3">
                        <span class="text-no-wrap">Địa chỉ</span>
                        <input asp-for="Address" class="form-control" placeholder="Nhập địa chỉ..." />
                    </div>
                </div>
            </div>
            <div class="mt-3 text-lg-end">
                <a asp-action="Index" class="btn btn-outline-secondary">Quay lại</a>
                <button id="btn-create" type="submit" class="btn btn-primary ">Sửa</button>
            </div>
        </form>
    </div>

</div>

@section Scripts {

    <script>
        $(document).ready(function () {
            $('form').submit(function (event) {
                event.preventDefault();

                var formData = new FormData(this);
                var url = $(this).attr('action');
                // Gửi AJAX
                $.ajax({
                    url: url,
                    method: 'post',
                    data: formData,
                    contentType: false,
                    processData: false,
                    success: function (response) {
                        if (response.success) {
                            showAlert("success", "Lưu thành công");
                            setTimeout(function () {
                                window.location.href = response.redirect;
                            }, 1500);
                        } else {
                            showAlert("error", response.error);
                        }
                    },
                    error: function () {
                        showAlert("error", "Có lỗi xảy ra khi gửi yêu cầu.");
                    }
                });
            });

        });

    </script>
}
